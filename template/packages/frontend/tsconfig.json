{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "../backend/schema.graphql",
        "tag": "gql"
      }
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../lib"
    }
  ]
}
