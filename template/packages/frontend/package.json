{
  "name": "@/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn start:dev",
    "build": "next build",
    "start": "next start",
    "start:dev": "concurrently -k 'next dev' 'npm-watch'",
    "codegen": "ts-graphql-plugin typegen",
    "codegen:watch": "watch '--ignoreDirectoryPattern=/__generated__/' 'yarn codegen' .",
    "typecheck": "echo next && tsc -p .",
    "typecheck:watch": "yarn typecheck --watch",
    "lint": "eslint --cache --ext .ts,.tsx --ignore-pattern __generated__ .",
    "watch": "npm-watch"
  },
  "watch": {
    "codegen": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "ignore": "**/__generated__/**"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@graphql-typed-document-node/core": "^3.1.0",
    "graphql": "^15.4.0",
    "next": "^10.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@hallettj/eslint-plugin-ts-graphql": "^0.1.1",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "concurrently": "^5.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "npm-watch": "^0.7.0",
    "ts-graphql-plugin": "^2.0.2",
    "watch": "^1.0.2"
  }
}
