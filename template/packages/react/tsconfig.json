{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "target": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["react", "jest"],
    "lib": ["es2019", "dom"],
    "preserveSymlinks": true,
    "outDir": "ignored",
    "esModuleInterop": true
  },
  "references": [
    { "path": "../lib" }
  ],
  "exclude": [
    "node_modules",
    "ignored",
    "*.config.js"
  ]
}
