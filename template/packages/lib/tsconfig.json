{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "es6",
    "target": "es2016",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "ignored"
  },
  "exclude": [
    "node_modules",
    "ignored",
    "*.config.js"
  ]
}
