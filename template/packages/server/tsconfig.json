{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2016",
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest", "node"],
    "outDir": "ignored"
  },
  "references": [
    { "path": "../lib" }
  ],
  "exclude": ["node_modules", "public", "ignored", "jest*"]
}
