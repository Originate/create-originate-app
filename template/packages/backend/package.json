{
  "name": "@replaceme/backend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "_tsnode": "ts-node --transpile-only",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "start:dev": "yarn db:start && nest start --watch",
    "start:debug": "yarn db:start && nest start --debug --watch",
    "db:start": "originate-scripts db:start",
    "db:stop": "originate-scripts db:stop",
    "db:destroy": "originate-scripts db:destroy",
    "db:shell": "originate-scripts db:shell",
    "db:migration:generate": "originate-scripts db:migration:generate",
    "db:migration:run": "yarn run typeorm migration:run",
    "typeorm": "yarn _tsnode node_modules/typeorm/cli.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --selectProjects unit --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --selectProjects e2e",
    "test:unit": "jest --selectProjects unit",
    "typecheck": "echo backend && tsc --pretty"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.17",
    "@nestjs/graphql": "^7.10.6",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.19.1",
    "class-transformer": "^0.4.0",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.1",
    "dataloader": "^2.0.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "rxjs": "^6.6.7",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.17",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.18.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.23.2",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.6",
    "originate-scripts": "^1.1.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-graphql-plugin": "^2.1.3",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  }
}
