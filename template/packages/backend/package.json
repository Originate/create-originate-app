{
  "name": "@/backend",
  "version": "1.0.0",
  "scripts": {
    "_node": "ts-node --transpile-only -r tsconfig-paths/register",
    "_prettier": "prettier \"./**/*.{js,jsx,ts,tsx,css,json}\"",
    "_jest": "jest --maxWorkers=1",
    "fix": "yarn _prettier --write > /dev/null",
    "db:start": "docker start package_name-postgres 2>/dev/null || docker run -e POSTGRES_PASSWORD=password -p 5432:5432 -d --name package_name-postgres postgres:latest",
    "db:stop": "docker stop package_name-postgres",
    "db:destroy": "yarn db:stop >/dev/null && docker rm package_name-postgres",
    "db:shell": "docker exec -it package_name-postgres psql -U postgres",
    "db:migration:generate": "yarn _node scripts/migrationGenerate.ts",
    "typeorm": "yarn _node node_modules/typeorm/cli.js",
    "dev": "nodemon --watch ..",
    "lint": "eslint --cache --ext .ts,.js src lib migrations index.ts",
    "migrate": "node-pg-migrate",
    "run:heroku": "yarn _node index.ts",
    "typecheck": "echo server && tsc -p .",
    "typecheck:watch": "yarn typecheck --watch",
    "test": "LOG_LEVEL=warn yarn _jest --config=jest.config.js"
  },
  "private": true,
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "fp-ts": "^2.8.1",
    "graphql": "^15.3.0",
    "io-ts": "^2.2.11",
    "log4js": "^6.3.0",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "scrypt-kdf": "^2.0.1",
    "ts-node": "^9.0.0",
    "tweetnacl": "^1.0.3",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "docker-await-postgres": "^1.0.0"
  }
}
